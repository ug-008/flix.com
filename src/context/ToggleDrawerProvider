import React, {createContext} from 'react';

export const ToggleDrawerContext = createContext();

class ToggleDrawerContextProvider extends React.Component {

    state = {
        toggle: false,
        toggleAction: ( ) => this.state.toggle = !this.state.index,
    }

    render() {

        return (
            <ToggleDrawerContext.Provider value={{...this.state}}>
                {this.props.children}
            </ToggleDrawerContext.Provider>
        );

    }

}

export default ToggleDrawerContextProvider;